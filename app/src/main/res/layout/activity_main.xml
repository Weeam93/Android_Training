<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mainViewModel"
            type="com.example.weeamawad.simplelogindatabindingapp.viewModel.MainViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/download_file_service_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> mainViewModel.downloadFile_ClickEvent(view)}"
            android:text="Download File Service" />

    </android.support.constraint.ConstraintLayout>
</layout>



