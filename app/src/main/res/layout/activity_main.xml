<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainViewModel"
            type="com.example.weeamawad.simplelogindatabindingapp.viewModel.MainViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/download_file_service_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> mainViewModel.downloadFile_ClickEvent(view)}"
            android:text="Download File Service" />


        <Button
            android:id="@+id/show_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> mainViewModel.showRecyclerView_ClickEvent(view)}"
            android:text="Show section Recycler View"
            app:layout_constraintTop_toBottomOf="@id/download_file_service_btn" />

        <com.example.weeam.common.view.CustomView
            android:id="@+id/custom_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cyan"
            app:layout_constraintTop_toBottomOf="@id/show_recycler_view"
            app:text="--" />
    </android.support.constraint.ConstraintLayout>
</layout>



